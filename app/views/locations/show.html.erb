<div class='page-header'>
  <h1><strong><%= @location.title %><strong></h1>
</div>

<script type="text/javascript" src="https://api.checkwx.com/widgets/metartaf.js"></script>
<h3>TAF</h3>
<hr>
 <h3><div class="checkwx-container" data-type="TAF" data-station="<%= @location.address %>"></h3>
 <hr>
 <h3>METAR</h3>
 <hr>
 <h3><div class="checkwx-container" data-type="METAR" data-station="<%= @location.address %>"></h3>
<hr>
<h3>AIRPORT MAP</h3>
<hr>
<div clas='col-lg-6'>
<%= render 'google_map', location: @location %>
</div>








<div class='well'>
  <%= link_to 'Edit', edit_location_path(@location), class: 'btn btn-primary' %>|
  <%= link_to 'Back', locations_path, class: 'btn btn-primary'%>
</div>