<div class='page-header'>
  <h1>List of Airports</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Airports</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.title, location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %> | 
            <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, class: 'btn btn-primary' %>
